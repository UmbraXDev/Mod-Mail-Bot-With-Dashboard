<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ModMail Dashboard - Premium</title>
  <link rel="stylesheet" href="/public/css/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
  <style>
  </style>
</head>
<body>
  <!-- Starfield Animation Background -->
  <div class="stars-container">
    <div class="stars"></div>
    <div class="shooting-stars">
      <div class="shooting-star"></div>
      <div class="shooting-star"></div>
      <div class="shooting-star"></div>
      <div class="shooting-star"></div>
      <div class="shooting-star"></div>
    </div>
  </div>

  <!-- Navigation -->
  <nav>
    <div class="logo">âœ¨ ModMail</div>
    <ul>
      <li><a href="/dashboard">ğŸ“Š Dashboard</a></li>
      <li><a href="/tickets">ğŸ« All Tickets</a></li>
      <li><a href="/settings">âš™ï¸ Settings</a></li>
    </ul>
    
    <!-- User Info with Avatar -->
    <div class="user-info">
      <div class="user-avatar-container">
        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png?size=256" 
             alt="<%= user.username %>" 
             class="user-avatar"
             onerror="this.src='https://cdn.discordapp.com/embed/avatars/<%= parseInt(user.discriminator) % 5 %>.png'">
      </div>
      <div class="user-details">
        <div class="user-name"><%= user.username %>#<%= user.discriminator %></div>
        <div class="user-role">Staff Member</div>
      </div>
      <a href="/logout" class="btn btn-danger" style="margin-left: 1rem;">Logout</a>
    </div>
  </nav>

  <!-- Main Container -->
  <div class="container">
    <!-- Header -->
    <div class="header">
      <h1>ğŸ¯ Dashboard Overview</h1>
      <p>Welcome back, <strong><%= user.username %></strong>! Here's what's happening with your support tickets.</p>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
      <div class="stat-card">
        <div class="icon">ğŸ“Š</div>
        <div class="number"><%= stats.total %></div>
        <div class="label">Total Tickets</div>
      </div>
      
      <div class="stat-card">
        <div class="icon">ğŸŸ¢</div>
        <div class="number"><%= stats.open %></div>
        <div class="label">Open Tickets</div>
      </div>
      
      <div class="stat-card">
        <div class="icon">ğŸ”’</div>
        <div class="number"><%= stats.closed %></div>
        <div class="label">Closed Tickets</div>
      </div>
      
      <div class="stat-card">
        <div class="icon">ğŸ“…</div>
        <div class="number"><%= stats.today %></div>
        <div class="label">Today's Tickets</div>
      </div>

      <% if (stats.claimed !== undefined) { %>
      <div class="stat-card">
        <div class="icon">âœ‹</div>
        <div class="number"><%= stats.claimed %></div>
        <div class="label">Claimed Tickets</div>
      </div>
      <% } %>
    </div>

    <!-- Open Tickets Section -->
    <div class="tickets-section">
      <h2 class="section-title">ğŸŸ¢ Open Tickets</h2>
      
      <% if (openTickets.length > 0) { %>
        <div class="table-responsive">
          <table>
            <thead>
              <tr>
                <th>Ticket ID</th>
                <th>User</th>
                <th>Status</th>
                <th>Created</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% openTickets.forEach(ticket => { %>
                <tr class="ticket-row">
                  <td>
                    <a href="/ticket/<%= ticket._id %>" class="ticket-id">#<%= ticket._id.toString().substring(0, 8) %></a>
                  </td>
                  <td>
                    <div class="user-cell">
                      <% if (ticket.user && ticket.user.avatar) { %>
                        <img src="<%= ticket.user.avatar %>" 
                             alt="<%= ticket.user.tag %>" 
                             class="user-avatar-small"
                             onerror="this.src='https://cdn.discordapp.com/embed/avatars/0.png'">
                      <% } else { %>
                        <div class="user-avatar-small" style="background: linear-gradient(135deg, var(--primary-color), var(--accent-purple)); display: flex; align-items: center; justify-content: center; font-weight: 700; color: white;">
                          <%= ticket.user_id.substring(0, 2) %>
                        </div>
                      <% } %>
                      <div class="user-info-table">
                        <span class="user-tag"><%= ticket.user ? ticket.user.tag : 'Unknown User' %></span>
                        <span class="user-id"><%= ticket.user_id %></span>
                      </div>
                    </div>
                  </td>
                  <td>
                    <span class="status-badge status-<%= ticket.status %>">
                      <%= ticket.status === 'open' ? 'ğŸŸ¢ Open' : 'ğŸ”’ Closed' %>
                    </span>
                  </td>
                  <td class="timestamp">
                    <%= new Date(ticket.created_at).toLocaleString() %>
                  </td>
                  <td>
                    <a href="/ticket/<%= ticket._id %>" class="btn btn-primary">View</a>
                    <button onclick="closeTicket('<%= ticket._id %>')" class="btn btn-danger">Close</button>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="empty-state">
          <div class="empty-state-icon">ğŸ‰</div>
          <h3 class="empty-state-title">No Open Tickets</h3>
          <p class="empty-state-text">Great job! All tickets have been resolved.</p>
        </div>
      <% } %>
    </div>

    <!-- Closed Tickets Section -->
    <div class="tickets-section">
      <h2 class="section-title">ğŸ”’ Recently Closed Tickets</h2>
      
      <% if (closedTickets.length > 0) { %>
        <div class="table-responsive">
          <table>
            <thead>
              <tr>
                <th>Ticket ID</th>
                <th>User</th>
                <th>Status</th>
                <th>Closed At</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% closedTickets.forEach(ticket => { %>
                <tr class="ticket-row">
                  <td>
                    <a href="/ticket/<%= ticket._id %>" class="ticket-id">#<%= ticket._id.toString().substring(0, 8) %></a>
                  </td>
                  <td>
                    <div class="user-cell">
                      <div class="user-avatar-small" style="background: linear-gradient(135deg, var(--danger-color), #ff5555); display: flex; align-items: center; justify-content: center; font-weight: 700; color: white;">
                        <%= ticket.user_id.substring(0, 2) %>
                      </div>
                      <div class="user-info-table">
                        <span class="user-tag">User</span>
                        <span class="user-id"><%= ticket.user_id %></span>
                      </div>
                    </div>
                  </td>
                  <td>
                    <span class="status-badge status-closed">ğŸ”’ Closed</span>
                  </td>
                  <td class="timestamp">
                    <%= ticket.closed_at ? new Date(ticket.closed_at).toLocaleString() : 'N/A' %>
                  </td>
                  <td>
                    <a href="/ticket/<%= ticket._id %>" class="btn btn-primary">View</a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="empty-state">
          <div class="empty-state-icon">ğŸ“­</div>
          <h3 class="empty-state-title">No Closed Tickets</h3>
          <p class="empty-state-text">No tickets have been closed yet.</p>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    async function closeTicket(ticketId) {
      if (!confirm('Are you sure you want to close this ticket?')) {
        return;
      }

      try {
        const response = await fetch(`/api/ticket/${ticketId}/close`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });

        const data = await response.json();

        if (data.success) {
          alert('Ticket closed successfully!');
          window.location.reload();
        } else {
          alert('Error: ' + (data.error || 'Failed to close ticket'));
        }
      } catch (error) {
        console.error('Error:', error);
        alert('An error occurred while closing the ticket');
      }
    }

    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    document.querySelectorAll('.btn').forEach(button => {
      button.addEventListener('click', function() {
        if (!this.classList.contains('no-loading')) {
          const originalText = this.innerHTML;
          this.innerHTML = '<span class="loading"></span>';
          this.disabled = true;
          
          setTimeout(() => {
            this.innerHTML = originalText;
            this.disabled = false;
          }, 3000);
        }
      });
    });

    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          setTimeout(() => {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
          }, index * 100);
        }
      });
    }, observerOptions);

    document.querySelectorAll('.stat-card, .ticket-row').forEach(el => {
      el.style.opacity = '0';
      el.style.transform = 'translateY(20px)';
      el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
      observer.observe(el);
    });

    document.querySelectorAll('.stat-card').forEach(card => {
      card.addEventListener('mouseenter', function(e) {
        createParticles(e, this);
      });
    });

    function createParticles(e, element) {
      for (let i = 0; i < 5; i++) {
        const particle = document.createElement('div');
        particle.style.position = 'absolute';
        particle.style.width = '4px';
        particle.style.height = '4px';
        particle.style.background = 'rgba(88, 101, 242, 0.8)';
        particle.style.borderRadius = '50%';
        particle.style.pointerEvents = 'none';
        particle.style.left = e.clientX + 'px';
        particle.style.top = e.clientY + 'px';
        particle.style.zIndex = '9999';
        
        document.body.appendChild(particle);
        
        const angle = (Math.PI * 2 * i) / 5;
        const velocity = 2;
        
        let x = 0;
        let y = 0;
        const animate = () => {
          x += Math.cos(angle) * velocity;
          y += Math.sin(angle) * velocity;
          
          particle.style.transform = `translate(${x}px, ${y}px)`;
          particle.style.opacity = 1 - (Math.abs(x) + Math.abs(y)) / 100;
          
          if (Math.abs(x) < 50 && Math.abs(y) < 50) {
            requestAnimationFrame(animate);
          } else {
            particle.remove();
          }
        };
        
        animate();
      }
    }
  </script>
</body>
</html>